<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-md-6">
        <p class="display-3" onclick="location.href='/poems/<%= poem._id %>';"
           style="cursor: pointer;"><%= poem.title %>
            <a class="btn btn-primary" href="/annotations/new?poem_id=<%= poem.id %>" role="button">Аннотация
                қосу</a>

            <% if (poem.canEdit) { %>
                <a class="btn btn-danger" href="/poems/delete?id=<%= poem.id %>" role="button">Жою</a>
                <a class="btn btn-secondary" href="/poems/edit?id=<%= poem.id %>" role="button">Өзгерту</a>
            <% } %>

            <% if (isLogged) { %>
                <% if (liked) { %>
                    <a class="btn btn-danger" href="/poems/like?id=<%= poem.id %>" role="button">Unlike</a>
                <% } else { %>
                    <a class="btn btn-primary" href="/poems/like?id=<%= poem.id %>" role="button">Like</a>
                <% } %>
            <% } %>
        </p>

        <% if (like_info) { %>
            <div class="alert alert-info" role="alert">
                <%= like_info %>
            </div>
        <% } %>

        <% if (poem.yt_id) { %>
            <div class="video-container mb-3">
                <iframe src="https://www.youtube.com/embed/<%= poem.yt_id %>" frameborder="0"
                        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
            </div>
        <% } else { %>
            <div class="mb-3">
                <p>Бұл поэмаға әлі видео қосылған жоқ.</p>
            </div>
        <% } %>

        <p class="display-6"><%= poem.authorName %></p>
    </div>

    <div class="col-12 row">
        <div class="col-6">
            <% for (let j = 0; j < poem.array.length; j++) { %>
                <% if (poem.array[j].trim().length === 0) { %>
                    <br>
                <% } else { %>
                    <% if (poem.annotations[j][0].content === "Бұл жолға әлі аннотация жоқ.") { %>
                        <p data-bs-toggle="collapse" data-bs-target="#collapseExample<%= j %>" aria-expanded="false"
                           aria-controls="collapseExample<%= j %>"><%= poem.array[j] %>
                        </p>
                    <% } else { %>
                        <p data-bs-toggle="collapse" data-bs-target="#collapseExample<%= j %>">
                            <span class="custom-green"><%= poem.array[j] %></span>
                        </p>
                    <% } %>
                <% } %>
            <% } %>
        </div>

        <div class="col-6">
            <% for (let j = 0; j < poem.array.length; j++) { %>
                <% if (poem.array[j].trim().length !== 0) { %>
                    <div class="collapse" id="collapseExample<%= j %>">
                        <div class="card card-body">
                            <% for (let annotation of poem.annotations[j]) { %>
                                <div>
                                    <p class="mb-0"><%= annotation.content %> <a
                                                href="/profile/id/<%= annotation.user_id %>"
                                                class="text-muted"><%= annotation.owner %></a></p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>

</div>