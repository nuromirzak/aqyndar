<% layout("layouts/boilerplate") %>
<div class="col-sm-6 offset-sm-4">
    <p class="display-3">Бүкіл аннотациялар</p>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Poem title</th>
            <th scope="col">Poem author</th>
            <th scope="col">Likes</th>
        </tr>
        </thead>
        <tbody>
        <% for (let i = 0; i < poems.length; i++) { %>

            <tr>
                <th scope="row"><%= i + 1 %></th>
                <td onclick="location.href='/poems/<%= poems[i]._id %>';"
                    style="cursor: pointer;"><%= poems[i].title %></td>
                <td><%= poems[i].authorName %></td>
                <td><%= 0 %></td>
            </tr>

        <% } %>
        </tbody>
    </table>
</div>