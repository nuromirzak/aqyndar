<% layout("layouts/boilerplate") %>
<form action="/annotations/new" method="post" class="col-md-6 offset-md-3">
    <input type="hidden" name="poem_id" value="<%= id %>">

    <div class="form-group mb-3">
        <p class="display-3"><%= poemName %></p>
    </div>

    <div class="form-group mb-3">
        <label for="lines">Жолдар:</label>

        <select class="form-control" id="lines" name="line_number" required>
            <option value="">Жолды таңдаңыз</option>
            <% for (let i = 0; i < lines.length; i++) { %>
                <% if (lines[i]) { %>
                    <% if (i === line_number) { %>
                        <option value="<%= i %>" selected><%= lines[i] %></option>
                    <% } else { %>
                        <option value="<%= i %>"><%= lines[i] %></option>
                    <% } %>
                <% } %>
            <% } %>
        </select>
    </div>

    <div class="form-floating mb-3">
                <textarea
                        class="form-control"
                        placeholder="Leave a annotation here"
                        name="annotation"
                        id="floatingTextarea"
                        required
                ></textarea>
        <label for="floatingTextarea">Аннотацияны теріңіз</label>
    </div>

    <button class="btn btn-primary" type="submit">Жіберу</button>
</form>