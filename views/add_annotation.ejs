<% layout("layouts/boilerplate") %>
<form action="/annotations/new" method="post" class="col-sm-6 offset-sm-4">
    <input type="hidden" name="poem_id" value="<%= id %>">

    <div class="form-group mb-3">
        <p class="display-3"><%= poemName %></p>
    </div>

    <div class="form-group mb-3">
        <label for="lines">Lines: </label>

        <select class="form-control" id="lines" name="line_number" required>
            <option value="">Select line</option>
            <% for (let i = 0; i < lines.length; i++) { %>
                <option value="<%= i %>"><%= lines[i] %></option>
            <% } %>
        </select>
    </div>

    <div class="form-floating mb-3">
                <textarea
                        class="form-control"
                        placeholder="Leave a annotation here"
                        name="annotation"
                        id="floatingTextarea"
                        required
                ></textarea>
        <label for="floatingTextarea">Annotations</label>
    </div>

    <button class="btn btn-primary" type="submit">Submit</button>
</form>